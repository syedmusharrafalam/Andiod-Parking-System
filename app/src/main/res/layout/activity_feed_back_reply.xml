<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parkingsystem.adminpanel.FeedBackReply">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/feedBackRecyclerAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedBackRecyclerAd"
        android:layout_marginTop="100dp"
        android:id="@+id/edtFeedBackAd"
        android:hint="Enter your feedback....!"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFeedBackAd"
        android:layout_below="@+id/edtFeedBackAd"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        />

</RelativeLayout>
